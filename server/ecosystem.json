{
  "apps": [
    {
      "name": "n2",
      "script": "app.js",
      "node_args": [
      ],
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "key": "../../xserver.pem",
      "user": "root",
      "host": "xserver.top",
      "ref": "origin/master",
      "repo": "https://github.com/cheneyweb/x-texas.git",
      "path": "/usr/local/node/x-texas",
      "post-deploy": "git pull && npm install && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}